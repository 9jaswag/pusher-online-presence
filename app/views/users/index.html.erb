<div class="container-fluid full-page">
  <div class="row">
    <div class="col-6 col-md-3 col-lg-2 bg-dark full-page">
      <% if user_signed_in? %>
        <p class="text-white mt-3">Signed in as <%= current_user.username %></p>
      <% end %>

      <h6 class="text-white my-3">Online Users</h6>
      <div class="left">
        <% @users.each do |user| %>
          <% if user.username != current_user.username %>
            <p class="active-user bg-white">
              <span class="online-icon d-inline-block <%= user.is_signed_in ? 'bg-success': 'bg-secondary'  %>"  data-id="<%= user.id %>"></span>
              <span class="username">@<%= user.username %></span>
            </p>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-6 col-md-9 col-lg-10 bg-light full-page right my-3">
      <h4 class="users-count d-inline-block">5 users are currently online</h4>
      <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-warning d-inline-block float-right' %>
    </div>
  </div>
</div>
